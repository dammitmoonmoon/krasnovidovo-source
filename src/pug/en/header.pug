header.header
    a.header__language(href=link) 
        p.header__text.header__text__language #{language} 
    
    a.header__logo.header__logo--left(href="https://www.msu.ru", target="_blank") 
        include ../msu.svg
        //- (svg-file) .logo
        p.header__text Lomonosov<br>Moscow State University
        
    a.header__logo.header__logo--right(href="http://www.eng.geogr.msu.ru/", target="_blank")
        include ../geo.svg 
        //- (svg-file) .logo .logo--hidden-in-mobile
        p.header__text.header__text--line-height Faculty of Geography

    a.header__title(href="index.html" target="_blank")
        h1.header__text.header__text__h1 Krasnovidovo Limnological Station

    nav.header__nav
        div.nav__hamburger.nav__hamburger--hidden(role="button" tabindex="0")
            div.nav__hamburger__bar.nav__hamburger__bar1
            div.nav__hamburger__bar.nav__hamburger__bar2
            div.nav__hamburger__bar.nav__hamburger__bar3
        
        ul.nav__bar.nav__bar--visible
            li.nav__bar__main.nav__bar__main--odd(role="button" tabindex="0") About Us &#9660;
                ul.bar__extra__set
                    li.item__extra
                        a.item__extra__text(href="history.html") History
                    li.item__extra  
                        a.item__extra__text(href="mission.html") Our Mission
            
            li.nav__bar__main(role="button" tabindex="0") People &#9660;
                ul.bar__extra__set
                    li.item__extra
                        a.item__extra__text(href="staff.html") Staff and Researchers
                    li.item__extra
                        a.item__extra__text(href="faculty.html") Faculty
                    li.item__extra
                        a.item__extra__text(href="partners.html") Our Partners
            
            li.nav__bar__main.nav__bar__main--odd(role="button" tabindex="0") Education &#9660;
                ul.bar__extra__set
                    li.item__extra
                        a.item__extra__text(href="field.html") Field Trainings
                    li.item__extra
                        a.item__extra__text(href="#") Summer Internship

            li.nav__bar__main(role="button" tabindex="0") Research &#9660;
                ul.bar__extra__set
                    li.item__extra
                        a.item__extra__text(href="#") Projects
                    li.item__extra
                        a.item__extra__text(href="publications.html") Publications

            li.nav__bar__main.nav__bar__main--odd(role="button" tabindex="0") Resources &#9660;
                ul.bar__extra__set
                    li.item__extra
                        a.item__extra__text(href="#") Our Data
                    li.item__extra
                        a.item__extra__text(href="#") Maps
                    li.item__extra
                        a.item__extra__text(href="miscellaneous.html") Miscellaneous
            a.nav__bar__main(href="contacts.html") Contact Us